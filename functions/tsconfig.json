{
  "compilerOptions": {
    "module": "commonjs",
    //"module": "NodeNext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "allowJs": false
    //"maxNodeModuleJsDepth": 10
  },
  "compileOnSave": true,
  "include": ["src", "src/**/*"],
  "exclude": ["node_modules"]
}
